{
  "include": [ "./src/**/*" ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [ "es6" ],
    "declaration": true,
    "types": [ "node" ],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
